    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'passivate_core'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=passivate_core"
                ],
                "filter": {
                    "name": "passivate_core",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'test_runner'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=test_runner",
                    "--package=passivate_core"
                ],
                "filter": {
                    "name": "test_runner",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'passivate'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=passivate",
                    "--package=passivate",
                    "--target=x86_64-pc-windows-gnu"
                ],
                "filter": {
                    "name": "passivate",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'passivate'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=passivate",
                    "--package=passivate"
                ],
                "filter": {
                    "name": "passivate",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}